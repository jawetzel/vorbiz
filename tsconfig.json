{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "experimentalDecorators": true, // Enable decorator syntax
    "emitDecoratorMetadata": true // Emit metadata for decorators (required by WatermelonDB)
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
